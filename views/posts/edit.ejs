<% layout("./biolerplate.ejs") %>

<h1 class="page-heading">Compose</h1>
<form class="" method="POST" action="/posts/<%= post.title %>?_method=PUT">
  <div class="form-group">
    <div class="compose-title">
      <h2>Title</h2>
      <input
        class="form-control"
        type="text"
        name="postTitle"
        value="<%= post.title %>"
        autocomplete="off"
      />
    </div>
    <div class="compose-post">
      <h2>Content</h2>
      <textarea class="form-control" name="postBody" rows="20">
 <%= post.content %> </textarea
      >
    </div>
  </div>
  <div class="col-lg-12 offset-5">
    <button class="btn btn-outline-danger m-4" type="reset">Clear</button>
    <button class="btn btn-outline-success" name="button">Edit</button>
  </div>
</form>
